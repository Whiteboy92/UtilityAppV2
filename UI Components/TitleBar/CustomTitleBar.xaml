<UserControl x:Class="UtilityAppV2.UI_Components.TitleBar.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="32"
             Background="Black">
    <UserControl.Resources>
        <!-- Base style for titlebar buttons -->
        <Style x:Key="TitleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button style -->
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleButtonStyle}" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- icon -->
            <ColumnDefinition Width="*"/>    <!-- title -->
            <ColumnDefinition Width="Auto"/> <!-- minimize -->
            <ColumnDefinition Width="Auto"/> <!-- maximize -->
            <ColumnDefinition Width="Auto"/> <!-- close -->
        </Grid.ColumnDefinitions>

        <!-- APP ICON -->
        <Image Grid.Column="0"
               Source="/UtilityAppV2;component/Resources/Icons/UtilityAppV2Icon.ico"
               Margin="6,0"
               Width="20"
               Height="20"/>

        <!-- TITLE -->
        <TextBlock Grid.Column="1"
                   Text="{Binding WindowTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Margin="10,0"/>

        <!-- MINIMIZE -->
        <Button Grid.Column="2"
                Style="{StaticResource TitleButtonStyle}"
                Click="Minimize_Click"
                WindowChrome.IsHitTestVisibleInChrome="True">
            <Image Source="pack://application:,,,/UI Components/TitleBar/Icons/Minimize.png"
                   Width="20" Height="20"/>
        </Button>

        <!-- MAXIMIZE -->
        <Button Grid.Column="3"
                Style="{StaticResource TitleButtonStyle}"
                Click="Maximize_Click"
                WindowChrome.IsHitTestVisibleInChrome="True">
            <Image Source="pack://application:,,,/UI Components/TitleBar/Icons/Maximize.png"
                   Width="20" Height="20"/>
        </Button>

        <!-- CLOSE -->
        <Button Grid.Column="4"
                Style="{StaticResource CloseButtonStyle}"
                Click="Close_Click"
                WindowChrome.IsHitTestVisibleInChrome="True">
            <Image Source="pack://application:,,,/UI Components/TitleBar/Icons/Close.png"
                   Width="20" Height="20"/>
        </Button>
    </Grid>
</UserControl>
